<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_light"
    android:orientation="vertical"
    tools:context=".Support">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F7DD89"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_home"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/sched"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_schedule"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_location"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/announce"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_news"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/topup"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_top_up"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_menu_bar"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="325dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/support_main_head"
                android:elevation="10dp" />

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="FAQs"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/faq1_container"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/faq1"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_round_corners_43dp"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:textColor="#393013"
                    android:textOff="@string/faq_11"
                    android:textOn="@string/faq_1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq2_container"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/faq2"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape_round_corners_43dp"
                    android:elevation="10dp"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textColor="#393013"
                    android:textOff="@string/faq2"
                    android:textOn="@string/faq22" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/faq3_container"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ToggleButton
                    android:id="@+id/faq3"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape_round_corners_43dp"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:textColor="#393013"
                    android:textOff="@string/faq33"
                    android:textOn="@string/faq3" />

            </LinearLayout>

            <View
                android:layout_width="325dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="#393013" />

            <TextView
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_extrabold"
                android:text="@string/tell_head"
                android:textColor="#393013"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="325dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_round_corners_15dp"
                android:backgroundTint="#E0D5B1"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="230dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/shape_round_corners_15dp"
                    android:backgroundTint="@color/white"
                    android:gravity="top|start"
                    android:hint="@string/concern_field"
                    android:padding="10dp"
                    android:textAlignment="textStart"
                    android:textColor="#393013"
                    android:textColorHint="#97393013"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/sendConcernBtn"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/inter"
                    android:padding="0dp"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="#FDEDBA"
                    android:textStyle="bold"
                    android:tint="@color/button_color_state" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>