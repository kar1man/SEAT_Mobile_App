<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selected_color"
    android:orientation="vertical"
    tools:context=".TrainSched">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F7DD89"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nav_home"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/sched"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nav_schedule"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nav_location"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/announce"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nav_news"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/topup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nav_top_up"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/nav_menu_bar"
                android:scaleType="fitCenter" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/main_banner_dark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
        
            <LinearLayout
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="vertical">
    
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_black"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:shadowColor="#000000"
                    android:shadowDx="-20"
                    android:shadowDy="20"
                    android:shadowRadius="4"
                    android:text="Hi, Juan!"
                    android:textColor="#FAFAFA"
                    android:textSize="28dp" />
                
                <LinearLayout
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="-5dp">
    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="left|center"
                        android:paddingLeft="20dp"
                        android:shadowColor="@color/black"
                        android:shadowDx="-10"
                        android:shadowDy="10"
                        android:shadowRadius="4"
                        android:text="Your Location"
                        android:textColor="#fafafa"
                        android:textSize="10dp" />
    
                    <LinearLayout
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="-7dp">
    
                        <LinearLayout
                            android:layout_width="7dp"
                            android:layout_height="10dp"
                            android:background="@color/default_light"
                            android:layout_marginStart="20dp">
                        </LinearLayout>
    
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:fontFamily="@font/inter_semibold"
                            android:gravity="left|center"
                            android:paddingLeft="2dp"
                            android:shadowColor="@color/black"
                            android:shadowDx="-10"
                            android:shadowDy="10"
                            android:shadowRadius="4"
                            android:text="Tondo, Manila"
                            android:textColor="#fafafa"
                            android:textSize="10dp" />
                        
                    </LinearLayout>
    
                </LinearLayout>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="186dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="20dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="right"
                        android:shadowColor="@color/black"
                        android:shadowDx="-10"
                        android:shadowDy="10"
                        android:shadowRadius="4"
                        android:text="AVAILABLE BALANCE"
                        android:textColor="#fafafa"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:fontFamily="@font/inter_black"
                        android:gravity="right|center"
                        android:shadowColor="@color/black"
                        android:shadowDx="-10"
                        android:shadowDy="10"
                        android:shadowRadius="4"
                        android:text="â‚±404.24"
                        android:textColor="#fafafa"
                        android:textSize="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center|end"
                    android:layout_marginTop="-10dp">

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="26dp"
                        android:layout_marginEnd="3dp">
                    </Button>

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="34dp">
                    </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="205dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/default_light"
        android:layout_marginTop="-41dp">

    </LinearLayout>

</LinearLayout>
