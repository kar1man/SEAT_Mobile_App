<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7AD29"
    android:orientation="vertical"
    tools:context=".TopUpComplete">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/main_banner_blur"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:letterSpacing="0.37"
            android:text="SEAT"
            android:textColor="@color/default_light"
            android:textSize="50dp"
            android:shadowColor="@color/default_color"
            android:shadowRadius="4"
            android:shadowDx="-20"
            android:shadowDy="20" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:letterSpacing="0.11"
            android:text="Official Receipt"
            android:textColor="@color/default_light"
            android:textSize="16.67dp"
            android:shadowColor="@color/default_color"
            android:shadowRadius="4"
            android:shadowDx="-10"
            android:shadowDy="10" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="325dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:backgroundTint="#393013"
            android:background="@drawable/shape_round_corners_15dp2"
            android:elevation="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="15dp"
                android:fontFamily="@font/inter_extrabold"
                android:gravity="center"
                android:letterSpacing="0.02"
                android:padding="0dp"
                android:text="TOP UP COMPLETE"
                android:textColor="#FDEDBA"
                android:textSize="25dp" />
        </LinearLayout>


        <LinearLayout
            android:backgroundTint="#FFF3CE"
            android:background="@drawable/shape_round_corners_21dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:backgroundTint="#F5D367"
                android:background="@drawable/shape_round_onlytop_21dp"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <TextView
                    android:paddingTop="15dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:textColor="#393013"
                    android:textAlignment="textStart"
                    android:text="@string/typuchase"
                    android:fontFamily="@font/inter_extrabold"
                    android:textSize="18sp"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:paddingStart="25dp"
                    android:textColor="#393013"
                    android:textAlignment="textStart"
                    android:text="@string/recent_msg"
                    android:textSize="11sp"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:layout_marginTop="-1dp"
                android:background="#393013"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_extrabold"
                        android:text="Purchase Summary"
                        android:textColor="#393013"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Amount:"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Payment Method:"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Transaction ID:"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Payment Status:"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/inter_extrabold"
                        android:text="Total Price:"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_extrabold"
                        android:text=""
                        android:textColor="#393013"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/seatAmountDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="20dp"
                        android:text="-"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/payMethodDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:text="-"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/transacIdDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:text="-"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/payStatDisplay"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:text="-"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/totalPrice"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/inter_extrabold"
                        android:text="Php --"
                        android:textAlignment="textStart"
                        android:textColor="#393013"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:gravity="center|end"
                android:background="@drawable/shape_round_onlybot_21dp"
                android:backgroundTint="#F5D367">

                <Button
                    android:id="@+id/backHomeButton"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#625732"
                    android:text="Confirm"
                    android:textAllCaps="false"
                    android:textColor="@color/default_light" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>