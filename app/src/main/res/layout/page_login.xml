<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAA600"
    android:orientation="vertical"
    tools:context=".Login">

    <ImageView
        android:elevation="10dp"
        android:paddingBottom="-5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:src="@drawable/display_banner"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="160dp"/>

    <ImageView
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:layout_width="325dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/display_random_data_analysis" />

    <LinearLayout
        android:elevation="10dp"
        android:layout_gravity="center"
        android:layout_width="325dp"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_rec"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/inter_extrabold"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#121212"
            android:textSize="22sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter"
            android:text="Username"
            android:textColor="#121212" />


        <EditText
            android:id="@+id/username"
            android:layout_width="300dp"
            android:elevation="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_input_field"
            android:fontFamily="@font/poppins"
            android:hint="Enter Username"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:paddingTop="3dp"
            android:textColor="#121212"
            android:textColorHint="#66121212"
            android:textSize="12sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins"
            android:text="Password"
            android:textColor="#121212" />


        <EditText
            android:id="@+id/password"
            android:elevation="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_input_field"
            android:fontFamily="@font/poppins"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingTop="3dp"
            android:paddingEnd="15dp"
            android:textColor="#121212"
            android:textColorHint="#66121212"
            android:textSize="12sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins"
            android:text="Forgot Password?"
            android:textAlignment="textEnd"
            android:textColor="#121212"
            android:textSize="12sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/login"
            android:elevation="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#121212"
            android:fontFamily="@font/inter"
            android:text="Log in"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/poppins"
                android:text="Don't have an account?"
                android:textAlignment="textEnd"
                android:textColor="#121212"
                android:textSize="12sp" />

            <Button
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:background="#00FFFFFF"
                android:fontFamily="@font/poppins_extrabold"
                android:paddingStart="5dp"
                android:paddingTop="0dp"
                android:text="Register"
                android:textAlignment="textStart"
                android:textColor="#121212"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>