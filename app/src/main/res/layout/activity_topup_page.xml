<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFF3CE"
    tools:context=".topup_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F7DD89"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/home"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/sched"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/train"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/loc"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/announce"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/news"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/topup"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/money"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/menu_bar"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="79dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_corners_15dp"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:gravity="center"
            android:letterSpacing="-0.02"
            android:text="Enter SEAT Account Number"
            android:textColor="#393013"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:background="#FFE697"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_extrabold"
                android:letterSpacing="-0.02"
                android:text="0000-0000-0000"
                android:textColor="#61542D"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp"
        android:padding="15dp"
        android:background="@drawable/rounded_corners_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Amount"
            android:textSize="14sp"
            android:textColor="#393013"
            android:fontFamily="@font/inter_extrabold"
            android:letterSpacing="-0.02"
            android:layout_gravity="start"/>

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:clipToPadding="true"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHP 1000"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHP 500"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHP 250"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHP 100"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHP 50"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PHP 20"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners_43dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:clipToPadding="false"
            android:elevation="10dp">


            <LinearLayout
                android:layout_width="138.92dp"
                android:layout_height="40dp"
                android:background="@drawable/inner_stroke"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:layout_marginStart="-5dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extrabold"
                    android:gravity="start"
                    android:lineSpacingExtra="0px"
                    android:text="Custom Amount"
                    android:textColor="#393013"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="167dp"
                android:layout_height="28dp"
                android:background="#FFE697"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter Custom Amount"
                    android:textSize="12sp"
                    android:textColor="#61542D"
                    android:fontFamily="@font/inter_extrabold"
                    android:lineSpacingExtra="0px"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp"
        android:padding="10dp"
        android:background="@drawable/rounded_corners_15dp">

        <TextView
            android:layout_width="162dp"
            android:layout_height="17dp"
            android:text="Select Payment Method"
            android:textSize="14dp"
            android:textColor="#393013"
            android:fontFamily="@font/inter_extrabold"
            android:letterSpacing="-0.02"
            android:layout_gravity="start"/>

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view2"
            android:layout_width="311dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:clipToPadding="true"
            android:paddingBottom="0dp">

            <LinearLayout
                android:layout_width="311dp"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/rounded_corners_8dp"
                    android:gravity="center"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"
                        android:text="GCash"
                        android:textColor="#FDEDBA"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maya"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BDO"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VISA"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:layout_marginEnd="15dp"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GrabPay"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/rounded_corners_8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7-Eleven"
                        android:textSize="12sp"
                        android:textColor="#FDEDBA"
                        android:fontFamily="@font/inter_extrabold"
                        android:letterSpacing="-0.02"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners_43dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:clipToPadding="false"
            android:elevation="10dp">


            <LinearLayout
                android:layout_width="138.92dp"
                android:layout_height="40dp"
                android:background="@drawable/inner_stroke"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:layout_marginStart="-5dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extrabold"
                    android:gravity="start"
                    android:lineSpacingExtra="0px"
                    android:text="Account Details"
                    android:textColor="#393013"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="167dp"
                android:layout_height="28dp"
                android:background="#FFE697"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="_ _ _ _ - _ _ _ _ - _ _ _ _"
                    android:textSize="12sp"
                    android:textColor="#61542D"
                    android:fontFamily="@font/inter_extrabold"
                    android:lineSpacingExtra="0px"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
