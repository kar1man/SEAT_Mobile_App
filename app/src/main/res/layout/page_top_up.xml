<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#FFF3CE"
    tools:context=".TopUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F7DD89"
        android:orientation="horizontal"
        android:weightSum="6">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_home"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/sched"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_schedule"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_location"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/announce"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_news"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/topup"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_top_up"
            android:scaleType="centerCrop" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/nav_menu_bar"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="79dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_round_corners_15dp"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_extrabold"
            android:gravity="center"
            android:letterSpacing="-0.02"
            android:text="Enter SEAT Account Number"
            android:textColor="#393013"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:background="#FFE697"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/number_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_extrabold"
                android:letterSpacing="-0.02"
                android:textColor="#61542D"
                android:textSize="12sp"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:cursorVisible="true"
                android:maxLength="12"
                android:digits="0123456789-"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp"
        android:padding="15dp"
        android:background="@drawable/shape_round_corners_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Amount"
            android:textSize="14sp"
            android:textColor="#393013"
            android:fontFamily="@font/inter_extrabold"
            android:letterSpacing="-0.02"
            android:layout_gravity="start" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:clipToPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/amount_1000"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:tint="@color/button_color_state"
                    android:text="PHP 1000"
                    android:textSize="12sp"
                    android:textColor="#FDEDBA"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:layout_marginEnd="15dp" />

                <Button
                    android:id="@+id/amount_500"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:tint="@color/button_color_state"
                    android:text="PHP 500"
                    android:textSize="12sp"
                    android:textColor="#FDEDBA"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:layout_marginEnd="15dp" />

                <Button
                    android:id="@+id/amount_250"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:tint="@color/button_color_state"
                    android:text="PHP 250"
                    android:textSize="12sp"
                    android:textColor="#FDEDBA"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:layout_marginEnd="15dp" />

                <Button
                    android:id="@+id/amount_100"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:tint="@color/button_color_state"
                    android:text="PHP 100"
                    android:textSize="12sp"
                    android:textColor="#FDEDBA"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:layout_marginEnd="15dp" />

                <Button
                    android:id="@+id/amount_50"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:tint="@color/button_color_state"
                    android:text="PHP \n50"
                    android:textSize="12sp"
                    android:textColor="#FDEDBA"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:layout_marginEnd="15dp" />

                <Button
                    android:id="@+id/amount_20"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:tint="@color/button_color_state"
                    android:text="PHP \n20"
                    android:textSize="12sp"
                    android:textColor="#FDEDBA"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:layout_marginEnd="15dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_round_corners_43dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:clipToPadding="false"
            android:elevation="10dp">


            <LinearLayout
                android:layout_width="138.92dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_round_stroke_43"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:layout_marginStart="-5dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extrabold"
                    android:gravity="start"
                    android:lineSpacingExtra="0px"
                    android:text="Custom Amount"
                    android:textColor="#393013"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="167dp"
                android:layout_height="28dp"
                android:background="#FFE697"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/custom_amount_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#61542D"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_extrabold"
                    android:inputType="number"
                    android:maxLength="10"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:lineSpacingExtra="0px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="93dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_round_corners_15dp">

        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/inter_extrabold"
            android:letterSpacing="-0.02"
            android:text="Select Payment Method"
            android:textColor="#393013"
            android:textSize="14dp" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view2"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginTop="5dp"
            android:clipToPadding="true">

            <LinearLayout
                android:layout_width="311dp"
                android:layout_height="39dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/gcash_button"
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:tint="@color/button_color_state"
                    android:layout_marginEnd="15dp"
                    android:text="GCash"
                    android:textColor="#FDEDBA"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/bdo_button"
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="15dp"
                    android:tint="@color/button_color_state"
                    android:text="Maya"
                    android:textColor="#FDEDBA"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/visa_button"
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="15dp"
                    android:tint="@color/button_color_state"
                    android:text="BDO"
                    android:textColor="#FDEDBA"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/grabpay_button"
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="15dp"
                    android:tint="@color/button_color_state"
                    android:text="VISA"
                    android:textColor="#FDEDBA"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/seven_eleven_button"
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:layout_marginEnd="15dp"
                    android:tint="@color/button_color_state"
                    android:text="GrabPay"
                    android:textColor="#FDEDBA"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/maya_button"
                    android:layout_width="137dp"
                    android:layout_height="39dp"
                    android:tint="@color/button_color_state"
                    android:text="7-Eleven"
                    android:textColor="#FDEDBA"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_extrabold"
                    android:letterSpacing="-0.02"
                    android:gravity="center"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_round_corners_43dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:clipToPadding="false"
            android:elevation="10dp">


            <LinearLayout
                android:layout_width="138.92dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_round_stroke_43"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:layout_marginStart="-5dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extrabold"
                    android:gravity="start"
                    android:lineSpacingExtra="0px"
                    android:text="Account Details"
                    android:textColor="#393013"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="167dp"
                android:layout_height="28dp"
                android:background="#FFE697"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center">

                <EditText
                    android:id="@+id/number_input2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#61542D"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_extrabold"
                    android:inputType="number"
                    android:maxLength="14"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:lineSpacingExtra="0px"
                    android:digits="0123456789-" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_round_corners_15dp">

        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/inter_extrabold"
            android:letterSpacing="-0.02"
            android:text="Confirm Transaction"
            android:textColor="#393013"
            android:textSize="14sp" />

        <TextView
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/inter"
            android:letterSpacing="-0.02"
            android:text="OPTIONAL: Enter your email for the official receipt"
            android:textColor="#393013"
            android:textSize="7sp" />

        <LinearLayout
            android:layout_width="292.9dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:background="#FFE697"
            android:elevation="5dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="start">

            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:letterSpacing="-0.02"
                android:textColor="#61542D"
                android:textSize="12sp"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:cursorVisible="true"
                android:maxLength="50"
                android:digits="0123456789-"/>
        </LinearLayout>


        <TextView
            android:layout_width="292.9dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/inter_extrabold"
            android:letterSpacing="-0.02"
            android:text="Total Amount: Php 100.00"
            android:textColor="#393013"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/purchase_button"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/default_color"
        android:gravity="center"
        android:padding="5dp"
        android:elevation="15dp"
        android:text="Purchase Now"
        android:textColor="#FDEDBA"
        android:textSize="14sp"
        android:fontFamily="@font/inter_extrabold"
        android:lineSpacingExtra="0px">

    </Button>

</LinearLayout>
