<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="15dp"/>
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"/>
            <size
                android:width="325dp"
                android:height="79dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFCD30"/>
            <corners android:radius="15dp"/>
            <shadowColor android:color="#80000000" />
            <shadowDx android:value="4dp"/>
            <shadowDy android:value="4dp"/>
            <shadowRadius android:value="10dp"/>
        </shape>
    </item>

</layer-list>
